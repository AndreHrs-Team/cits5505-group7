# Flask settings
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database settings
DATABASE_URL=postgresql://username:password@localhost:5432/healthtrack
# For SQLite:
# DATABASE_URL=sqlite:///dev.sqlite

# Mail settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=noreply@healthtrack.com

# File upload settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/healthtrack.log

# API settings
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=3600  # 1 hour in seconds 